a.pull-left(href='#')
  .media-object(style='background-image: url(#{avatar})')
.media-body
  h4.media-heading #{user_name}
  button.close(type="button" aria-hidden="true")
    | &times;
  p
    | #{text}
  .article-navigation
    input(type='submit' value='Show article' class='btn btn-primary js-link' href='articles/#{id}')
    span.comments-count Count of comments: #{comments_count}
